  output_base_name = get_path_info(invoker.output_name, "name")
  ldscript_file = "${root_build_dir}/${output_base_name}.ld"

  pre_build_target = "${target_name}.pre_build"
  post_build_target = "${target_name}.post_build"

  group(target_name) {
    deps = [
      ":${post_build_target}",
    ]
  }

}
